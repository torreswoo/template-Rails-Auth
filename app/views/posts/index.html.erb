<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to 'Show', project_post_path(@project, post) %></td>
        <td><%= link_to 'Edit', edit_project_post_path(@project, post) %></td>
        <td><%= link_to 'Destroy', project_post_path(@project, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_project_post_path %>
